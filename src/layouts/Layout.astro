---
import "@/styles/globals.css";
// import Header from "@/components/Header.astro";
import "@fontsource-variable/bricolage-grotesque";
import { SEO } from "astro-seo";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <SEO
            title={title ?? "Hojayfa Rahman"}
            description="Hojayfa Rahman is a full-stack developer based in Dhaka, Bangladesh, specializing in building performant and scalable web applications using modern technologies like Next.js, React, TypeScript, tRPC, and Tailwind CSS."
            openGraph={{
                basic: {
                    title: "Hojayfa Rahman - Full-Stack Developer",
                    type: "website",
                    image: "https://avatars.githubusercontent.com/u/45138545?s=400&u=f91235ae98b3f46eac6cba185815507bd0a0401d&v=4",
                },
            }}
            twitter={{
                creator: "@hrmasss",
                image: "https://pbs.twimg.com/profile_images/1520422703400112129/IJNNq6VT_400x400.jpg",
            }}
            extend={{
                link: [
                    {
                        rel: "icon",
                        type: "image/svg+xml",
                        href: "/favicon.svg",
                    },
                ],
                meta: [
                    {
                        name: "twitter:image",
                        content:
                            "https://pbs.twimg.com/profile_images/1520422703400112129/IJNNq6VT_400x400.jpg",
                    },
                    {
                        name: "twitter:title",
                        content: "Hojayfa Rahman",
                    },
                    {
                        name: "twitter:description",
                        content: "Full-Stack Developer",
                    },
                    {
                        name: "name-variations",
                        content:
                            "hojayfa, hojaifa, hozaifa, hojafa, huzaifa, hujayfa, hozifa, huzifa, rahman, rahaman, rohoman, rohman, hojaifa rahaman, hozaifa rahaman, hojafa rahaman, huzaifa rahaman, hujayfa rahaman, hozifa rahaman, huzifa rahaman, hojaifa rohoman, hozaifa rohoman, hojafa rohoman, huzaifa rohoman, hujayfa rohoman, hozifa rohoman, huzifa rohoman, hojaifa rohman, hozaifa rohman, hojafa rohman, huzaifa rohman, hujayfa rohman, hozifa rohman, huzifa rohman, hojayfa rahman, hojayfa rahaman, hojayfa rohoman, hojayfa rohman",
                    },
                ],
            }}
        />
        <meta charset="UTF-8" />
        <link
            rel="sitemap"
            href="/sitemap-index.xml"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Hojayfa Rahman",
                "url": "https://hojayfa.codes",
                "sameAs": [
                    "https://www.linkedin.com/in/hrmasss",
                    "https://twitter.com/hrmasss",
                    "https://github.com/hrmasss"
                    "https://instagram.com/hrmasss"
                ]
            }
        </script>

        <script is:inline>
            if (localStorage.getItem("theme") === null) {
                if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                    document.documentElement.setAttribute(
                        "data-theme",
                        "black"
                    );
                } else {
                    document.documentElement.setAttribute("data-theme", "lofi");
                }
            } else
                document.documentElement.setAttribute(
                    "data-theme",
                    localStorage.getItem("theme")
                );
        </script>
        <script>
            import { themeChange } from "theme-change";
            themeChange();
        </script>
    </head>
    <body>
        <div class="max-w-3xl mx-auto">
            <!-- <Header /> -->
            <slot />
        </div>
    </body>
</html>
