---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const works = await getCollection("work");
---

<Layout title="Work | Hojayfa Rahman">
    <main class="p-4 lg:p-0">
        <div class="max-w-xl mt-4">
            <h1>
                you can find some of my
                <strong class="text-xl font-bold">works</strong> here
            </h1>

            <p class="py-6">
                i try to keep my works 
            </p>
        </div>

        <section class="pb-6 space-y-6">
            {
                works.map(async (work) => {
                    const { Content } = await work.render();
                    return (
                        <div class="p-4 sm:p-6 rounded-md border shadow-sm">
                            <div class="space-y-1 mb-6">
                                <h3 class="text-lg font-bold sm:text-xl">
                                    {work.data.title}
                                </h3>
                                {work.data.url && (
                                    <a
                                        href={work.data.url}
                                        class="font-medium text-sm sm:text-base">
                                        {work.data.url.replace(
                                            /(^\w+:|^)\/\//,
                                            ""
                                        )}
                                    </a>
                                )}
                                <p class="text-xs sm:text-sm">
                                    {work.data.duration}
                                </p>
                            </div>
                            <article class="prose-sm sm:prose-base prose-img:rounded-md">
                                <Content />
                            </article>
                        </div>
                    );
                })
            }
        </section>
    </main>
</Layout>
